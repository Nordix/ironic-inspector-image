Listen 5050

<VirtualHost *:5050>
    ProxyPass "/"  "http://127.0.0.1:5051/"
    ProxyPassReverse "/"  "http://127.0.0.1:5051/"

    SetEnv APACHE_RUN_USER ironic-inspector
    SetEnv APACHE_RUN_GROUP ironic-inspector

    ErrorLog /dev/stdout
    LogLevel debug
    CustomLog /dev/stdout combined

{% if "CERT_FILE" in env and "KEY_FILE" in env %}
    ServerName {{ env["DOMAIN_NAME"]}}
    SSLEngine on
    SSLCertificateFile {{ env["CERT_FILE"] }}
    SSLCertificateKeyFile {{ env["KEY_FILE"] }}

{% if "CLIENT_AUTH_CACERT_FILE" in env %}
    SSLVerifyClient none
    SSLCACertificateFile {{ env["CLIENT_AUTH_CACERT_FILE"] }}

    <Location "/">
        SSLVerifyClient require
        SSLVerifyDepth 1
    </Location>

    <LocationMatch "(^/?$)|(^/v1/?$)|(^/v1/continue)">
        SSLVerifyClient none
    </LocationMatch>

{% endif %}
{% endif %}
</VirtualHost>